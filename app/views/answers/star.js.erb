$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $image = $('img#img-star')
  $prevRanked = $image.parent().parent();

  if ($prevRanked.length !== 0) {

      $image.remove();

      $button = $prevRanked.children('a.btn');
      var href = $button.attr('href');
      href = href.replace('unstar', 'star');
      $button.attr('href', href);
      $button.text('ğŸŒŸ Star');
  }

  $('<%= "div.answer-#{@answer.id}"%>').remove();
  $("div.answers").prepend('<%= j render @answer %>');
<% end %>